// resolviendoexamen}.h

#include "stdafx.h"
#include <iostream>
#include "math.h"
#include "conio.h"

using namespace std;

void main()
{
	int x,n,i;
	float y,s=0;

	cout<<"Ingrese el valor de x: "<<endl;
	cin>> x;
	cout<<"Ingrese el valor de n: "<<endl;
	cin>> n;

	do{
	y=(1+(1/x));

	for(i=1;i<=n;i++)
		s=s+pow(y,i);
	}while (n>0 && x>0);
	cout<<"El resultado es: "<<s<<endl;
	getch();

}
